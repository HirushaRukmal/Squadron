<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLBPaymentSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_background">

    <TextView
        android:id="@+id/idTVInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Invoice Details"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/idIVMovie"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_below="@id/idTVInvoice"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/idTVFilmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVInvoice"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/idIVMovie"
        android:padding="4dp"
        android:text="Movie Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVMovieDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVFilmName"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/idIVMovie"
        android:padding="3dp"
        android:text="Movie Duration"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVMovieDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVMovieDuration"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/idIVMovie"
        android:padding="3dp"
        android:text="Movie Description"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/ShowData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVMovieDesc"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="11dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/idSeatNumbers"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="3dp"
            android:text="55,56"
            android:background="@color/blue_shade_1"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/idTicketCount"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/idSeatNumbers"
            android:padding="3dp"
            android:text="2"
            android:background="@color/blue_shade_1"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ShowData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowData"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="11dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/idBookedDate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="3dp"
            android:text="2021/09/30"
            android:background="@color/blue_shade_1"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/idTicketType"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/idBookedDate"
            android:padding="3dp"
            android:text="Gold"
            android:background="@color/blue_shade_1"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ShowData2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowData1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="11dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/idTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/blue_shade_2"
            android:padding="10dp"
            android:text="Total : Rs. 1500"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ShowData3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowData2"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:weightSum="2">

        <Button
            android:id="@+id/idSavePayerDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Save Payer Details"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowData3"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:weightSum="2">

        <Button
            android:id="@+id/idBtnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/idBtnPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Pay"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>
</RelativeLayout>