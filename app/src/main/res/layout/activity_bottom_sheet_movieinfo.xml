<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLBSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade_1">

    <TextView
        android:id="@+id/idTVMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Film Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/idIVMovie"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVMovieName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/idTVMovieType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVMovieDescription"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVMovie"
        android:padding="3dp"
        android:text="Date"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/idTVMovieDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVMovieType"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVMovie"
        android:padding="3dp"
        android:text="Movie Duration"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVMovieDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVMovieName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVMovie"
        android:padding="3dp"
        android:text="Decriptoion"
        android:textColor="@color/white" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVMovieDuration"
        android:orientation="horizontal"
        android:weightSum="2">


        <Button
            android:id="@+id/idBtnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/idBtnBook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Book"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>
</RelativeLayout>